<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5E1B2"
    tools:context=".ActivityTambahTugas">

    <!--edit text for note title-->
    <EditText
        android:id="@+id/tambahJudulTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Note Title"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <!--edit text for note description-->

    <!--button for saving and updating a note-->
    <EditText
        android:id="@+id/tambahDetailTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tambahJudulTugas"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp"
        android:background="#78C66A"
        android:gravity="start|top"
        android:hint="Enter your Note Details"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textColorHint="#37474F" />

    <Button
        android:id="@+id/idBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#78C66A"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinnerKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idBtn"
        android:layout_below="@+id/tambahDetailTugas"
        android:layout_marginStart="20dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="165dp" />

</RelativeLayout>
